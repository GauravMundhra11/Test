<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Step Flow</title>
    <!-- Font Awesome CDN for the person icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        body {
            font-family: 'Arial', sans-serif;
        }

        .step-container {
            display: flex;
            align-items: center;
            width: 100%;
            position: relative;
            padding: 30px 0; /* Padding to accommodate icon and arrows */
        }

        .step {
            display: flex;
            flex-direction: column;
            align-items: center;
            position: relative;
            margin: 0 20px; /* Margin to ensure spacing */
        }

        .circle {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            font-size: 14px;
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
            background-color: #ccc;
            position: relative;
        }

        /* Styles for different step states */
        .completed {
            background-color: #4CAF50; /* Green for completed steps */
        }

        .current {
            background-color: #f1c40f; /* Yellow for current step */
        }

        .upcoming {
            background-color: #ccc; /* Gray for upcoming steps */
        }

        .step-label {
            margin-top: 8px;
            font-size: 12px;
            color: #333;
            text-align: center;
        }

        .arrow {
            font-size: 30px;
            color: #ddd;
            margin: 0 5px;
            position: relative;
        }

        .completed-arrow {
            color: #4CAF50; /* Green for completed steps */
        }

        .current-arrow {
            color: #f1c40f; /* Yellow for current step */
        }

        .arrow-container {
            display: flex;
            align-items: center;
            width: 50px;
        }

        .person-icon {
            position: absolute;
            top: -30px; /* Adjust to fit above the circle */
            left: 50%;
            transform: translateX(-50%);
            font-size: 20px;
            color: #333;
            display: none; /* Hidden by default */
        }

        .current .person-icon {
            display: block; /* Show the person icon only for the current step */
        }
    </style>
    <script>
        var current_step = 4; // Dynamically set this value based on your flow

        document.addEventListener('DOMContentLoaded', () => {
            // Set classes and person icon based on current_step value
            for (let i = 1; i <= 8; i++) {
                let circle = document.getElementById(`step${i}`);
                let step = circle.parentElement;
                let arrow = document.getElementById(`arrow${i - 1}`);

                if (i < current_step) {
                    circle.classList.add('completed');
                    if (arrow) arrow.classList.add('completed-arrow');
                } else if (i === current_step) {
                    circle.classList.add('current');
                    if (arrow) arrow.classList.add('current-arrow');
                } else {
                    circle.classList.add('upcoming');
                }
            }
        });
    </script>
</head>
